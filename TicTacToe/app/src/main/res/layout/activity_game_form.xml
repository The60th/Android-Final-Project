<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.the60th.tictactoe.gameForm"
    android:backgroundTint="@android:color/darker_gray">

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="3"
        android:rowCount="10"
        android:layout_height="375dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/buttonTop3"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@android:color/black"
            android:onClick="clickTopRight"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />


        <ImageButton
            android:id="@+id/buttonMiddle3"
            android:layout_column="2"
            android:layout_marginLeft="25dp"

            android:layout_row="2"
            android:layout_width="88dp"
            android:backgroundTint="@android:color/black"

            android:layout_height="88dp"
            android:onClick="clickMidRight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />

        <ImageButton
            android:id="@+id/buttonBottom1"
            android:layout_column="0"
            android:layout_row="3"
            android:backgroundTint="@android:color/black"
            android:onClick="clickBotLeft"
            android:layout_width="88dp"
            android:layout_marginLeft="15dp"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />
        <ImageButton
            android:id="@+id/buttonBottom2"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginLeft="25dp"

            android:layout_width="88dp"
            android:backgroundTint="@android:color/black"
            android:onClick="clickBotMid"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />
        <ImageButton
            android:id="@+id/buttonBottom3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@android:color/black"
            android:onClick="clickBotRight"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />

        <ImageButton
            android:id="@+id/buttonTop1"
            app:srcCompat="@drawable/blanktile"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="15dp"

            android:backgroundTint="@android:color/black"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            android:onClick="clickTopLeft" />

        <ImageButton
            android:id="@+id/buttonTop2"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="25dp"

            android:backgroundTint="@android:color/black"
            android:layout_height="88dp"
            android:layout_width="88dp"
            android:onClick="clickTopMid"
            app:srcCompat="@drawable/blanktile"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonMiddle2"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="88dp"
            android:backgroundTint="@android:color/black"
            android:onClick="clickMidMid"
            android:layout_height="88dp"
            android:layout_marginLeft="25dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />

        <ImageButton
            android:id="@+id/buttonMiddle1"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="15dp"
            android:layout_width="88dp"
            android:backgroundTint="@android:color/black"
            android:onClick="clickMidLeft"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blanktile" />
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Xs Vs Os"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:paddingLeft="150dp" />

        <TextView
            android:text="Who will win?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:paddingLeft="140dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" />

        <TextView
            android:text="_________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:backgroundTint="@android:color/background_dark"
            android:background="@android:color/background_dark" />
    </LinearLayout>
</RelativeLayout>

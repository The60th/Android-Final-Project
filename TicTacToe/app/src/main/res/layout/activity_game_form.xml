<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.the60th.tictactoe.gameForm">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:weightSum="1">

        <ImageButton
            android:layout_height="89dp"
            app:srcCompat="@drawable/largeximage"
            android:id="@+id/imageButton"
            android:layout_width="285dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_weight="0.82" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="3"
        android:rowCount="10"
        android:layout_height="375dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/buttonTop3"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickTopRight"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeoimage" />


        <ImageButton
            android:id="@+id/buttonMiddle1"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickMidLeft"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeximage" />

        <ImageButton
            android:id="@+id/buttonMiddle3"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@color/colorAccent"

            android:layout_height="88dp"
            android:onClick="clickMidRight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeximage" />

        <ImageButton
            android:id="@+id/buttonBottom1"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickBotLeft"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeoimage" />
        <ImageButton
            android:id="@+id/buttonBottom2"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickBotMid"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeximage" />
        <ImageButton
            android:id="@+id/buttonBottom3"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickBotRight"
            android:layout_width="88dp"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeximage" />

        <ImageButton
            android:id="@+id/buttonTop1"
            app:srcCompat="@drawable/largeoimage"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="fitCenter"
            android:onClick="clickTopLeft" />

        <ImageButton
            android:id="@+id/buttonMiddle2"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="25dp"
            android:layout_width="88dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickMidMid"
            android:layout_height="88dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/largeoimage" />

        <ImageButton
            android:id="@+id/buttonTop2"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_height="88dp"
            android:layout_width="88dp"
            android:onClick="clickTopMid"
            app:srcCompat="@drawable/largeoimage"
            android:scaleType="fitCenter" />
    </GridLayout>
</RelativeLayout>
